\def\everb@typeset@line@{
  \leavevmode 
  % put the hyperref stuffs saved by \everb@inc@lineno here
  \unhbox\everb@boxa
  % line number
  \ifeverb@nbr
    \ifeverb@firstbox
      % Offset = (displayed line number) - (real linenumber)
      \ifnum\everb@linenumber=\everb@linenumber@auto
        \def\everb@linenumber@offset{\z@}
      \else
