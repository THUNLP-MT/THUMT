    \ifdim\fboxradius<\everb@titleskip \fboxradius\everb@titleskip \fi
    \@tempa\hskip\fboxradius
    #2\lower#4\box\z@ #3
    \@tempa\hskip\fboxradius
  }
  \ht\z@=\fboxrule \dp\z@=\z@\box\z@}}

