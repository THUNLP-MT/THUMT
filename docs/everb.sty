\long\def\everb@char@#1{
  \ifeverb@TeXmode
    \ifnum\@tempcnta=13		% end of line
      \ifeverb@bol
        \everb@add@toks\par
      \else
        \@tempcnta=32
        \expandafter\everb@TeXmode@char\everb@space
      \fi
